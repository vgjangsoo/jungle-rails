<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

      <div class="row">
        <div class="col-sm-4">
          <dl class="dl-vertical">
            <h3>Reviews</h3>

            <%= form_for @review, url: '`/products/#{@product.id}/reviews`' do |f| %>

              <div class="form-group">
                <dt> Description: </dt> <%= f.text_area :description, class: 'form-control' %> 
              </div>

              <div class="form-group">
                Rating: <%= f.select :rating, %w{ 1 2 3 4 5 }, {:prompt => "Rate..."} %> 
                <%= f.submit "Submit", class: 'btn btn-primary', :style => 'margin-left: 100px;'%>
              </div>
              </br>
            <% end %>

            <% if @review %>
            <% @product.reviews.each do |review| %> 
              <dt> <%= review.user.first_name %> : <%= review.description %> </dt>
              <dd> Rating: <% review.rating.times do %> 

                <% # Use stars to show ratings. %>
                <span class="glyphicon glyphicon-star"></span>
                <% end %>
              </dd>
              </br>
              <% end %>
          </dl>
        </div>
      </div>
      <% end %>


  </article>

</section>
